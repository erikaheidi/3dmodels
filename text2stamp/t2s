#!/usr/bin/env bash

# Check if OpenSCAD is installed
if ! command -v openscad &> /dev/null; then
    echo "OpenSCAD could not be found. Please install it to use this script."
    exit 1
fi

# Default values
stamp=""
size=""

# Parse named parameters
while [[ $# -gt 0 ]]; do
    case $1 in
        --stamp)
            stamp="$2"
            shift 2
            ;;
        --size)
            size="$2"
            shift 2
            ;;
        *)
            echo "Unknown parameter: $1"
            exit 1
            ;;
    esac
done

# Prompt for stamp if not provided
if [[ -z "$stamp" ]]; then
    while true; do
        read -r -p "Enter stamp (default: printables): " stamp
        stamp=${stamp:-printables}
        if [[ -n "$stamp" ]]; then
            break
        else
            echo "Stamp cannot be empty. Please try again."
        fi
    done
fi

# Prompt for size if not provided
if [[ -z "$size" ]]; then
    while true; do
        read -r -p "Enter size (default: 30): " size
        size=${size:-30}
        if [[ "$size" =~ ^[1-9][0-9]*$ ]]; then
            break
        else
            echo "Size must be a positive integer. Please try again."
        fi
    done
fi

# Display the collected values
echo "Generating Stamp '$stamp' with size $size..."
openscad -o "out/$stamp.stl" -D "stamp=\"$stamp\"" -D "size=$size" base-stamp.scad

echo "Stamp '$stamp' generated successfully as 'out/$stamp.stl'."